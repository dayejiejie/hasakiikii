generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Danmaku {
  id        String   @id @default(cuid())
  text      String
  name      String
  color     String
  top       Float
  createdAt DateTime @default(now())
}

model BlogPost {
  id        String    @id @default(cuid())
  title     String
  content   String
  category  String
  excerpt   String?
  readTime  String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  published Boolean   @default(true)
  author    String
  media     Media[]
  comments  Comment[]
}

model Media {
  id           String    @id @default(cuid())
  type         String
  url          String    @db.Text
  filename     String
  originalName String
  createdAt    DateTime  @default(now())
  postId       String?
  post         BlogPost? @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
}

model Comment {
  id        String    @id @default(cuid())
  content   String
  author    String
  createdAt DateTime  @default(now())
  postId    String
  post      BlogPost  @relation(fields: [postId], references: [id], onDelete: Cascade)

  @@index([postId])
} 